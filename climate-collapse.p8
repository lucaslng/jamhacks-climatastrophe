function hcenter(s)
	return 64 - #s * 2
end

function vcenter()
	return 61
end

function intro()
	starttime = time()
	print("hello", hcenter("hello"), vcenter(), white)
	while (time() - starttime < 2)
	do
	end

end

function _init()
	-- cls()
	-- intro()
	cls()
	Player = {
		x = 63, 
		y = 63,
		fx = false,
		sprite = 1,
		hunger = 5, 
		thirst = 5,
	}

	function Player:moveleft(distance)
		self.x -= distance
		self.fx = true
	end
	
	function Player:moveright(distance)
		self.x += distance
		self.fx = false
	end
	
	function Player:moveup(distance)
		self.y -= distance
		self.fx = false
	end
	
	function Player:movedown(distance)
		self.y += distance
		self.fx = false
	end
end

function _update()
	if (btn(0)) Player:moveleft(1)
	if (btn(1)) Player:moveright(1)
	if (btn(2)) Player:moveup(1)
	if (btn(3)) Player:movedown(1)
end

function _draw()
	cls()

	camera(Player.x - 63, Player.y - 63)
	map(0, 0, 0, 0, 128, 32)
	spr(Player.sprite, Player.x, Player.y, 1, 1, Player.fx)

	camera()
	palt(green, true)
	palt(black, false)
	for i=0,Player.hunger,1 do
		spr(3, 3 + i * 9, 3, 2, 2)
	end
	palt()
end

