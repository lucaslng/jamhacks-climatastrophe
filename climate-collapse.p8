function hcenter(s)
	return 64 - #s * 2
end

function vcenter()
	return 61
end

function intro()
	starttime = time()
	print("hello", hcenter("hello"), vcenter(), white)
	while (time() - starttime < 2) do
	end
end

function _init()
	cls()
	intro()
	cls()
	Player = {
		x = 63,
		y = 63,
		fx = false,
		fy = false,
		sprite = 1,
		hunger = 10,
		thirst = 10
	}

	function Player:moveleft(distance)
		self.x -= distance
		fx = true
		fy = false
		sprite = 1
	end

	function Player:moveright(distance)
		self.x += distance
		fx = false
		fy = false
		sprite = 1
	end

	function Player:moveup(distance)
		self.y -= distance
		fx = false
		fy = true
		sprite = 2
	end

	function Player:movedown(distance)
		self.y += distance
		fx = false
		fy = false
		sprite = 2
	end
end

function _update()
	if (btn(0)) Player:moveleft(1)
	if (btn(1)) Player:moveright(1)
	if (btn(2)) Player:moveup(1)
	if (btn(3)) Player:movedown(1)
end

function _draw()
	cls()
	camera(Player.x - 63, Player.y - 63)
	map(0, 0, 0, 0, 128, 32)
	spr(Player.sprite, Player.x, Player.y, 1, 1, Player.fx, Player.fy)
end

