function _init()
	
	player={
		x=63,
		y=63,
		fx=false,
		fy=false,
		sp=2
		}
	
end

function _update()

	
-- player movement --
	if btn(➡️) then
		player.x+=1
		player.fx=false
		player.fy=false
		
		player.sp=2
	end
	if btn(⬅️) then
		player.x-=1
		player.fx=true
		player.fy=false
		
		player.sp=2
	end
	--y movement--
	if btn(⬇️) then
		player.y+=1
		player.fx=false
		player.fy=true
		ac
		player.sp=3
	end
	if btn(⬆️) then
		player.y-=1
		player.fx=false
		player.fy=false
		
		player.sp=3
	end
end

function _draw()
	cls()
	spr(player.sp,player.x,player.y,1,1,player.fx,player.fy)
end
